@using CarFactoryContracts.ViewModels

@model List<MessageInfoViewModel>

@{
	ViewData["Title"] = "Mails";
}

<div class="text-center">
    <h1 class="display-4">Почта</h1>
</div>

<div class="text-center">
    @{
        if(Model == null)
        {
            <h3 class="display-4">Авторизуйтесь</h3>
            return;
        }

        <table class="table">
            <thead>
                <tr>
                    <th>Номер</th>
                    <th>Отправитель</th>
                    <th>Дата письма</th>
                    <th>Заголовок</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.MessageId)</td>
                        <td>@Html.DisplayFor(modelItem => item.SenderName)</td>
                        <td>@Html.DisplayFor(modelItem => item.DateDelivery)</td>
                        <td>@Html.DisplayFor(modelItem => item.Subject)</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>